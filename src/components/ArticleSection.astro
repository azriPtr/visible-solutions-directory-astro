---
import Card from "./Card.astro";
import article1 from "../assets/article-1.png";
import article2 from "../assets/article-2.png";
import article3 from "../assets/article-3.png";

const articles = [
  {
    variant: "article" as const,
    image: article1.src,
    imageAlt: "Locksmith consulting with customer",
    category: "Cost Guides",
    title: "How much does a locksmith cost in 2026?",
    description:
      "A complete breakdown of call-out fees, hourly rates, and parts pricing for emergency and planned work.",
    linkUrl: "/guides/locksmith-cost-2026",
    linkText: "Read guide",
  },
  {
    variant: "article" as const,
    image: article2.src,
    imageAlt: "Various high-security locks and cylinders",
    category: "Home Security",
    title: "Top 5 High-Security Locks for Front Doors",
    description:
      "Our experts review the latest Ultion, Avocet, and Yale cylinders for best protection.",
    linkUrl: "/guides/high-security-locks",
    linkText: "Read guide",
  },
  {
    variant: "article" as const,
    image: article3.src,
    imageAlt: "Hand on uPVC door handle",
    category: "uPVC Tips",
    title: "Why is my uPVC door handle stuck?",
    description:
      "Troubleshooting common gearbox failures, misalignment, and when to call a pro.",
    linkUrl: "/guides/upvc-door-handle-stuck",
    linkText: "Read guide",
  },
];
---

<section class="relative bg-base-100">
  <div class="mx-auto max-w-7xl px-6 py-12 md:py-24">
    <!-- Section Header -->
    <div class="mb-12 max-w-3xl">
      <h2 class="text-3xl font-bold text-primary tracking-tight">
        Guides to staying secure
      </h2>
      <p class="mt-4 text-lg text-base-300">
        Practical advice and security tips from our experts to help you protect
        your home and business.
      </p>
    </div>

    <!-- Articles Grid -->
    <ol
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 list-none mt-0 mr-0 mb-10 ml-0 pt-0 pr-0 pb-0 pl-0">
      {articles.map((article) => <Card {...article} />)}
    </ol>

    <!-- View All CTA -->
    <div class="text-center mt-8">
      <a
        href="/guides"
        class="inline-flex items-center gap-1 text-sm font-bold text-primary hover:text-secondary transition-colors">
        View all guides
        <svg
          class="h-4 w-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path d="M5 12h14m-7-7 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
