---
import logo from '../assets/logo.svg';
import emergency from '../assets/emergency-call.png'
---

<header class="flex flex-row justify-between p-4">
    <div class="flex">
      <a class="text-base-content flex items-center gap-2 text-sm font-semibold" href="#">
      <img src={logo.src} class="size-6" alt="brand-logo" />
      UK Locksmith Directory
    </a>
  </div>
    <div class="flex flex-row gap-2">
      <button class="btn btn-outline btn-primary text-sm font-semibold rounded-xl">
        <img src={emergency.src} class="size-4 shrink-0" alt="brand-icon" />
        Emergency Support
      </button>

      <!-- dropdown menu -->
      <div class="dropdown relative inline-flex">
  <button id="dropdown-title" type="button" class="dropdown-toggle btn btn-text btn-primary" aria-haspopup="menu" aria-expanded="false" aria-label="Dropdown">
    Explore
    <span class="icon-[tabler--chevron-down] dropdown-open:rotate-180 size-4"></span>
  </button>
  <ul class="dropdown-menu dropdown-open:opacity-100 hidden min-w-60" role="menu" aria-orientation="vertical" aria-labelledby="dropdown-title">
    <li class="dropdown-title">Settings</li>
    <li><a class="dropdown-item" href="#">My Profile</a></li>
    <li><a class="dropdown-item" href="#">Settings</a></li>
    <li><a class="dropdown-item" href="#">Billing</a></li>
    <li><a class="dropdown-item" href="#">FAQs</a></li>
    <hr class="border-base-content/25 my-2 -mx-2" />
    <li class="dropdown-title">Contact</li>
    <li><a class="dropdown-item" href="#">Contact support</a></li>
  </ul>
</div>
    </div>
</header>