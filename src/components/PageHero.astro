---
interface Props {
  title: string;
  description?: string;
  breadcrumbs: Array<{ label: string; href?: string }>;
}

const { title, description, breadcrumbs } = Astro.props;
---

<section class="py-12">
  <!-- Breadcrumb -->
  <nav class="mb-8 flex items-center px-6 gap-2 text-sm">
    {
      breadcrumbs.map((crumb, index) => (
        <>
          {crumb.href ? (
            <a href={crumb.href} class="text-primary hover:underline">
              {crumb.label}
            </a>
          ) : (
            <span class="font-medium text-base-content">{crumb.label}</span>
          )}
          {index < breadcrumbs.length - 1 && (
            <span class="text-base-content/50">/</span>
          )}
        </>
      ))
    }
  </nav>

  <!-- Title and Description -->
  <div class="mb-12">
    <h1 class="mb-6 text-4xl font-bold text-primary">
      {title}
    </h1>

    {
      description && (
        <p class="mb-6 max-w-3xl text-base leading-relaxed text-base-content/80">
          {description}
        </p>
      )
    }

    <!-- Slot for additional content like info boxes, buttons, etc. -->
    <slot />
  </div>
</section>
