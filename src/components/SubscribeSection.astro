<section class="relative bg-surface">
  <div class="mx-auto max-w-7xl px-6 py-12 md:py-24">
    <div
      class="grid grid-cols-1 mid:grid-cols-2 items-center gap-8 md:gap-12 lg:grid-cols-2">
      <!-- Left Section -->
      <div>
        <div class="inline-flex items-center py-1 mb-2">
          <span class="text-xs font-bold text-primary uppercase tracking-wide"
            >For Locksmith Businesses</span
          >
        </div>
        <h2
          class="text-2xl font-bold tracking-tight text-primary sm:text-5xl lg:text-4xl">
          Grow your reputation with no lead fees.
        </h2>
        <p class="text-base-300 mt-4 text-base md:text-lg">
          Join the UK's most transparent directory. Get discovered by local
          customers who contact you directly. No middle-men, no shared leads.
        </p>
      </div>

      <!-- Right Section -->
      <div class="space-y-6">
        <!-- Features List -->
        <div class="space-y-4">
          <!-- Feature 1 -->
          <div class="flex items-start gap-3">
            <div
              class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-emerald-500/10 mt-0.5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-emerald-600">
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-base font-bold text-primary mb-1">
                Verified Trust
              </h3>
              <p class="text-muted text-sm">
                Display your credentials and trade body badges.
              </p>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="flex items-start gap-3">
            <div
              class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-emerald-500/10 mt-0.5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-emerald-600">
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-base font-bold text-primary mb-1">
                Direct Enquiries
              </h3>
              <p class="text-muted text-sm">
                Customers call you or request quotes directly.
              </p>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-3 pt-2">
          <a href="#" class="btn btn-primary px-6 py-2.5 text-sm font-bold">
            Add your business
          </a>
          <a
            href="#"
            class="btn btn-outline btn-primary px-6 py-2.5 text-sm font-bold">
            See pricing
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
