---

<section class="relative bg-surface">
  <div class="mx-auto max-w-7xl px-6 py-12 md:py-24">
    <!-- Section Header -->
    <div class="text-center mb-12 max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-primary tracking-tight mb-4">
        Verified by the UK's leading trade bodies
      </h2>
      <p class="text-lg text-base-300">
        We work alongside industry associations to ensure every locksmith listed
        meets rigorous professional and safety standards.
      </p>
    </div>

    <!-- Trade Body Badges -->
    <div
      class="flex flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16 mb-12">
      <!-- MLA -->
      <div class="flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-full bg-primary/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            <path d="M12 8v4"></path>
            <path d="M12 16h.01"></path>
          </svg>
        </div>
        <span class="text-base font-bold text-primary">MLA</span>
      </div>

      <!-- NAL -->
      <div class="flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-full bg-secondary/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-secondary">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <span class="text-base font-bold text-primary">NAL</span>
      </div>

      <!-- SafeContractor -->
      <div class="flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-full bg-emerald-500/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-emerald-600">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
        <span class="text-base font-bold text-primary">SafeContractor</span>
      </div>

      <!-- BSI -->
      <div class="flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-full bg-red-500/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-red-600">
            <path
              d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
            ></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <path d="m9 15 2 2 4-4"></path>
          </svg>
        </div>
        <span class="text-base font-bold text-primary">BSI</span>
      </div>

      <!-- CHAS -->
      <div class="flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-full bg-indigo-500/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-indigo-600">
            <path d="M20 6 9 17l-5-5m16-9v7c0 5-3 7-9 7s-9-2-9-7V3l9-3 9 3z"
            ></path>
            <rect width="8" height="6" x="8" y="10" rx="1"></rect>
            <path d="m16 10-2-2"></path>
          </svg>
        </div>
        <span class="text-base font-bold text-primary">CHAS</span>
      </div>
    </div>

    <!-- View All CTA -->
    <div class="text-center mt-8">
      <a
        href="/partners"
        class="inline-flex items-center gap-1 text-sm font-bold text-primary hover:text-secondary transition-colors">
        View all partner standards
        <svg
          class="h-4 w-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path d="M5 12h14m-7-7 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
