---
import Layout from "../../../layouts/Layout.astro";
import PageHero from "../../../components/PageHero.astro";
import Button from "../../../components/Button.astro";
import Card from "../../../components/Card.astro";
import FAQ from "../../../components/FAQ.astro";

const seoData = {
  title: "Locksmiths in Birmingham | Verified Local Professionals",
  description:
    "Find and compare verified locksmiths serving Birmingham. Whether you need an emergency lockout response in the Jewellery Quarter, a residential lock change in Edgbaston, or a commercial security upgrade, our directory lists local professionals who cover your area.",
};

// Locksmiths data - mapped to Card component's listing variant
const locksmiths = [
  {
    title: "SwiftSecure Birmingham",
    description:
      "Premier emergency locksmith specializing in uPVC door mechanisms and high-security cylinder upgrades. Official Mul-T-Lock partner.",
    badges: ["VERIFIED", "24/7"],
    rating: 5.0,
    reviewCount: 128,
    distance: "Covers Birmingham City Centre, Edgbaston, Harborne & Jewellery Quarter",
    features: ["DBS Checked", "Liability Insured"],
    phone: "0121-XXX-XXXX",
    profileUrl: "/listings/swiftsecure-birmingham",
    isFeatured: true,
  },
  {
    title: "Birmingham City Locks",
    description:
      "Local family-run business focusing on residential security. Experts in non-destructive entry and British Standard lock fitting.",
    badges: ["VERIFIED"],
    rating: 4.9,
    reviewCount: 94,
    distance: "Covers Birmingham, Digbeth, and surrounding suburbs",
    features: ["DBS Checked"],
    phone: "0121-XXX-XXXX",
    profileUrl: "/listings/birmingham-city-locks",
    isFeatured: false,
  },
  {
    title: "Edgbaston Security Pros",
    description:
      "Commercial security specialists. Master key systems, access control, and smart lock installations for businesses and offices.",
    badges: ["VERIFIED"],
    rating: 4.8,
    reviewCount: 52,
    distance: "Covers Birmingham Business District and University Areas",
    features: ["Liability Insured"],
    phone: "0121-XXX-XXXX",
    profileUrl: "/listings/edgbaston-security-pros",
    isFeatured: false,
  },
];

// Services data
const services = [
  "Emergency Entry in Birmingham",
  "Lock Replacement in Birmingham",
  "uPVC Mechanism Repair in Birmingham",
  "Smart Lock Installation in Birmingham",
  "Commercial Master Keys in Birmingham",
  "Automotive Key Cutting in Birmingham",
];

// FAQs
const faqs = [
  {
    question: "Do locksmiths cover surrounding villages outside Birmingham?",
    answer:
      "Yes, many Birmingham-based locksmiths extend their coverage to nearby areas including Solihull, Sutton Coldfield, and surrounding villages. Check each locksmith's service area on their profile page to confirm they cover your specific location.",
  },
  {
    question: "What are typical arrival times in Birmingham city centre?",
    answer:
      "For emergency callouts in Birmingham city centre, most locksmiths aim to arrive within 30-60 minutes. Response times may vary depending on traffic conditions, time of day, and your specific location. Emergency locksmiths marked with 24/7 badges prioritize urgent callouts.",
  },
  {
    question: "Are 24/7 services available across Birmingham?",
    answer:
      "Yes, several verified locksmiths in Birmingham offer 24/7 emergency services. Look for the '24/7' badge on listings. These professionals provide round-the-clock assistance for lockouts, break-ins, and urgent security issues throughout Birmingham and surrounding areas.",
  },
];
---

<Layout {...seoData}>
  <div class="bg-base-50">
    <!-- Hero Section -->
    <div class="mx-auto max-w-7xl px-4 sm:px-6">
      <PageHero
        title="Locksmiths in Birmingham"
        description="Find and compare verified locksmiths serving Birmingham. Whether you need an emergency lockout response in the Jewellery Quarter, a residential lock change in Edgbaston, or a commercial security upgrade, our directory lists local professionals who cover your area.">
        <!-- Filter Badges -->
        <div class="mb-4">
          <div class="text-xs font-semibold uppercase tracking-wide text-base-content/60 mb-3">
            Showing locksmiths who cover Birmingham
          </div>
          <div class="flex flex-wrap gap-2">
            <span
              class="inline-flex items-center gap-1.5 rounded-md border border-base-200 bg-white px-3 py-1.5 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-error">
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
              </svg>
              Emergency
            </span>
            <span
              class="inline-flex items-center gap-1.5 rounded-md border border-base-200 bg-white px-3 py-1.5 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
              24/7 Available
            </span>
            <span
              class="inline-flex items-center gap-1.5 rounded-md border border-base-200 bg-white px-3 py-1.5 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
              Residential
            </span>
            <span
              class="inline-flex items-center gap-1.5 rounded-md border border-base-200 bg-white px-3 py-1.5 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round">
                <rect width="16" height="20" x="4" y="2" rx="2" ry="2"></rect>
                <path d="M9 22v-4h6v4"></path>
              </svg>
              Commercial
            </span>
            <span
              class="inline-flex items-center gap-1.5 rounded-md border border-base-200 bg-white px-3 py-1.5 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round">
                <path
                  d="M14 16H9m10 0h3v-3.15a1 1 0 0 0-.84-.99L16 11l-2.7-3.6a1 1 0 0 0-.8-.4H5.24a2 2 0 0 0-1.8 1.1l-.8 1.63A6 6 0 0 0 2 12.42V16h2"
                ></path>
                <circle cx="6.5" cy="16.5" r="2.5"></circle>
                <circle cx="16.5" cy="16.5" r="2.5"></circle>
              </svg>
              Auto
            </span>
          </div>
        </div>
      </PageHero>
    </div>

    <!-- Main Listings Section -->
    <section class="py-12">
      <div class="mx-auto max-w-7xl px-4 sm:px-6">
        <h2 class="mb-8 text-3xl font-bold text-primary">
          Best locksmiths in Birmingham
        </h2>

        <ul class="space-y-6 list-none">
          {
            locksmiths.map((locksmith, index) => (
              <li class="relative">
                {locksmith.isFeatured && (
                  <div class="absolute -left-2 -top-2 z-10">
                    <span class="rounded-md bg-secondary px-3 py-1 text-xs font-bold uppercase tracking-wide text-white shadow-sm">
                      Featured
                    </span>
                  </div>
                )}
                <div class="rounded-lg border border-base-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
                  <div class="flex items-start gap-6">
                    <!-- Number Badge -->
                    <div class="flex-shrink-0">
                      <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-base-100 text-lg font-bold text-primary">
                        {index + 1}
                      </div>
                    </div>

                    <!-- Content -->
                    <div class="flex-1">
                      <!-- Header: Title + Badges -->
                      <div class="mb-3">
                        <h3 class="mb-2 text-xl font-bold text-primary">
                          {locksmith.title}
                        </h3>
                        <div class="flex flex-wrap gap-2">
                          {locksmith.badges.map((badge) => (
                            <span
                              class={`rounded px-2 py-1 text-xs font-semibold uppercase ${
                                badge === "VERIFIED"
                                  ? "bg-success/10 text-success"
                                  : badge === "24/7"
                                    ? "bg-primary/10 text-primary"
                                    : "bg-base-200 text-base-content"
                              }`}>
                              {badge}
                            </span>
                          ))}
                        </div>
                      </div>

                      <!-- Features -->
                      <div class="mb-3 flex flex-wrap gap-3 text-sm text-base-content/70">
                        {locksmith.features.map((feature) => (
                          <div class="flex items-center gap-1.5">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="14"
                              height="14"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              class="text-success">
                              <path d="M20 6 9 17l-5-5" />
                            </svg>
                            <span>{feature}</span>
                          </div>
                        ))}
                      </div>

                      <!-- Rating -->
                      <div class="mb-3 flex items-center gap-2">
                        <div class="flex items-center gap-1">
                          {Array.from({ length: 5 }, (_, i) => (
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="16"
                              height="16"
                              viewBox="0 0 24 24"
                              fill={
                                i < Math.floor(locksmith.rating)
                                  ? "currentColor"
                                  : "none"
                              }
                              stroke="currentColor"
                              stroke-width="2"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              class={
                                i < Math.floor(locksmith.rating)
                                  ? "text-secondary"
                                  : "text-base-300"
                              }>
                              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                            </svg>
                          ))}
                        </div>
                        <span class="text-sm font-bold text-base-content">
                          {locksmith.rating.toFixed(1)}
                        </span>
                        <span class="text-sm text-base-content/60">
                          ({locksmith.reviewCount} verified reviews)
                        </span>
                      </div>

                      <!-- Description -->
                      <p class="mb-4 text-sm leading-relaxed text-base-content/80">
                        {locksmith.description}
                      </p>

                      <!-- Coverage Area -->
                      <div class="mb-4 flex items-start gap-2 text-sm text-base-content/70">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class="mt-0.5 flex-shrink-0">
                          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                          <circle cx="12" cy="10" r="3" />
                        </svg>
                        <span>{locksmith.distance}</span>
                      </div>

                      <!-- Action Buttons -->
                      <div class="flex flex-wrap gap-3">
                        <Button href={locksmith.profileUrl} variant="primary" size="md">
                          View Details
                        </Button>
                        <Button
                          href={`tel:${locksmith.phone}`}
                          variant="outline"
                          size="md"
                          iconLeft="icon-[tabler--phone]">
                          Call Now
                        </Button>
                        <Button
                          href={`${locksmith.profileUrl}#quote`}
                          variant="ghost"
                          size="md">
                          Request Quote
                        </Button>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </section>

    <!-- Services Section -->
    <section class="bg-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6">
        <h2 class="mb-8 text-3xl font-bold text-primary">
          Locksmith services in Birmingham
        </h2>

        <div class="mb-6 flex flex-wrap gap-3">
          {
            services.map((service) => (
              <span class="rounded-md border border-base-200 bg-base-50 px-4 py-2 text-sm font-medium text-base-content transition-colors hover:border-primary hover:bg-primary/5">
                {service}
              </span>
            ))
          }
        </div>

        <p class="mb-4 text-base-content/70">
          Our network in Birmingham covers residential districts, the central
          business area, and surrounding industrial estates. Local specialists
          are equipped to handle everything from standard cylinder changes to
          complex multipoint lock failures on uPVC and composite doors.
        </p>

        <a
          href="/services?location=birmingham"
          class="inline-flex items-center gap-1 text-sm font-semibold text-primary hover:underline">
          View all 20+ specialized locksmith services in Birmingham
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="size-4">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </section>

    <!-- FAQ Section -->
    <FAQ
      title="FAQs about locksmiths in Birmingham"
      faqs={faqs}
      backgroundColor="bg-base-50"
      showCTA={false}
    />

    <!-- Navigation CTA Section -->
    <section class="bg-white py-12">
      <div class="mx-auto max-w-7xl px-4 sm:px-6">
        <div class="rounded-lg border border-base-200 bg-base-50 p-8">
          <div class="mb-6 text-center">
            <h2 class="mb-2 text-xl font-bold text-primary">
              Explore nearby areas
            </h2>
            <p class="text-sm text-base-content/70">
              View other towns in West Midlands
            </p>
          </div>

          <div class="flex flex-wrap justify-center gap-4">
            <Button href="/locations/west-midlands" variant="outline" size="md">
              Back to West Midlands locksmiths
            </Button>
            <Button href="/trust" variant="primary" size="md">
              Trust & Verification
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Emergency Notice -->
    <div class="border-t border-base-200 py-6">
      <div class="mx-auto max-w-7xl px-4 text-center sm:px-6">
        <a
          href="/emergency"
          class="inline-flex items-center gap-1.5 text-sm text-error hover:underline">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
          </svg>
          Locked out? Go to our Emergency Help page
        </a>
      </div>
    </div>
  </div>
</Layout>
