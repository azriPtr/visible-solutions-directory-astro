  document.addEventListener("DOMContentLoaded", () => {
    const monthlyBtn = document.getElementById("monthly-btn");
    const annualBtn = document.getElementById("annual-btn");
    const freeMonthsLabel = document.getElementById("free-months-label");

    if (!monthlyBtn || !annualBtn || !freeMonthsLabel) return;

    // Active and inactive styles
    const activeClasses = "bg-surface text-primary shadow-sm";
    const inactiveClasses = "text-base-content/60 hover:text-base-content";

    // Monthly button click
    monthlyBtn.addEventListener("click", () => {
      // Set Monthly as active
      monthlyBtn.className = `rounded-md px-6 py-2 text-sm font-medium transition-all ${activeClasses}`;
      // Set Annual as inactive
      annualBtn.className = `rounded-md px-6 py-2 text-sm font-medium transition-all ${inactiveClasses}`;
      // Hide the free months label
      freeMonthsLabel.classList.add("hidden");
    });

    // Annual button click
    annualBtn.addEventListener("click", () => {
      // Set Annual as active
      annualBtn.className = `rounded-md px-6 py-2 text-sm font-medium transition-all ${activeClasses}`;
      // Set Monthly as inactive
      monthlyBtn.className = `rounded-md px-6 py-2 text-sm font-medium transition-all ${inactiveClasses}`;
      // Show the free months label
      freeMonthsLabel.classList.remove("hidden");
    });
  });
